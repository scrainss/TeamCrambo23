@model Pokemon

<h2>Pokemon Details</h2>

<dl>
    <dt>Id:</dt>
    <dd>@Model.PokemonId</dd>

    <dt>Name:</dt>
    <dd>@Model.Name</dd>

    <dt>Species:</dt>
    <dd>@Model.Species</dd>

    <dt>Type 1:</dt>
    <dd>@Model.Type1</dd>

    <dt>Type 2:</dt>
    <dd>@Model.Type2</dd>

